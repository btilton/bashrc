# My bashrc sub export script
# based on https://notabug.org/demure/dotfiles/
# vim:set syntax=bash:

export CLICOLOR="YES"       ## Color 'ls', etc.
export EDITOR=vim           ## Set default editor

### History Settings ### {{{
export HISTSIZE=100000                  ## Size of shells hist
export HISTFILESIZE=100000              ## Size of Hist file
export HISTCONTROL=ignoreboth

export PATH=$PATH:$HOME/bin:$HOME/bin/er+xssh/bin:$HOME/bin/terraform:$HOME/Android/Sdk/platform-tools
